<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:orientation="vertical"
              tools:context = ".destinos" >

		<LinearLayout
			android:layout_width = "match_parent"
			android:layout_height = "match_parent"
			android:orientation = "vertical" >

			<Button
				android:id = "@+id/btnVolver"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:onClick="volverLista"
				tools:ignore="OnClick"
				android:text = "Volver a lista" />

			<TextView
				android:id = "@+id/kjji"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:textSize="24sp"
				android:textColor="@color/white"
				android:background="@color/TextBackGround"
				android:gravity="center_horizontal"
				android:text = "DESTINO" />

			<TextView
				android:id = "@+id/lblDestino"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:gravity="center_horizontal"
				android:layout_marginVertical="6sp"
				android:text = "lblDestino" />
			<TextView
				android:id = "@+id/mhjhhj"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:textSize="24sp"
				android:textColor="@color/white"
				android:background="@color/TextBackGround"
				android:gravity="center_horizontal"
				android:text = "COORDENADAS" />

			<TextView
				android:id = "@+id/lblCoordenadas"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:gravity="center_horizontal"
				android:layout_marginVertical="6sp"
				android:text = "lblCoordenadas" />
			<TextView
				android:id = "@+id/khjui89"
				android:layout_width = "match_parent"
				android:layout_height = "wrap_content"
				android:textSize="24sp"
				android:textColor="@color/white"
				android:background="@color/TextBackGround"
				android:gravity="center_horizontal"
				android:text = "INFORMACION" />

			<RelativeLayout
				android:layout_width = "match_parent"
				android:layout_height = "match_parent"
				android:orientation = "vertical" >

				<ImageView
					android:id = "@+id/imgDistrito"
					android:layout_width = "wrap_content"
					android:layout_height = "wrap_content"
					android:scaleType="centerCrop"
					android:layout_alignParentBottom="true"
					android:layout_alignParentTop="true"
					android:layout_alignParentEnd="true"
					android:layout_alignParentStart="true"
					tools:srcCompat = "@tools:sample/backgrounds/scenic" />

				<TextView
					android:id = "@+id/lblInfo"
					android:layout_width = "match_parent"
					android:layout_height = "wrap_content"
					android:layout_alignParentEnd = "true"
					android:layout_alignParentBottom = "true"
					android:layout_alignParentStart="true"
					android:background = "@color/white"
					android:textColor="@color/black"
					android:typeface="serif"
					android:gravity = "center_horizontal|center_vertical"
					android:text = "lblInfo" />
			</RelativeLayout >

		</LinearLayout >
</LinearLayout >